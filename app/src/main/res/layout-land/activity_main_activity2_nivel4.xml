<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaperprincipal"
    android:contentDescription="@string/app_name"
    tools:context=".MainActivity2_Nivel4">

    <ImageView
        android:id="@+id/imageView_Signo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="108dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toEndOf="@+id/imageView_NumeroUno"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/resta" />

    <ImageView
        android:id="@+id/imageView_NumeroUno"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="108dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myToolbar_Nivel1"
        app:srcCompat="@drawable/cero" />

    <ImageView
        android:id="@+id/imageView_Manzanas"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="200dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toEndOf="@+id/textView_Manzanas"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tresvidas" />

    <ImageView
        android:id="@+id/imageView_NumeroDos"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="108dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toEndOf="@+id/imageView_Signo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cero" />

    <EditText
        android:id="@+id/et_Resultado"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="@string/etRespuesta"
        android:inputType="number"
        android:textColor="@color/colorPrimary_dark"
        android:textColorHint="@color/colorPrimary_dark"
        android:fontFamily="@font/juniory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_NumeroUno" />

    <TextView
        android:id="@+id/textView_Nombre"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:text="@string/jugadorNombre"
        android:textColor="@color/colorPrimary_dark"
        android:fontFamily="@font/comic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/fondoboton"
        android:onClick="comparar"
        android:text="@string/botonSumar"
        android:fontFamily="@font/juniory"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_NumeroDos" />

    <TextView
        android:id="@+id/textView_Manzanas"
        android:layout_width="105dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/et_vidas"
        android:textColor="@color/colorPrimary_dark"
        android:fontFamily="@font/comic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Score" />

    <TextView
        android:id="@+id/textView_Score"
        android:layout_width="104dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/totalScore"
        android:textColor="@color/colorPrimary_dark"
        android:fontFamily="@font/comic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Nombre" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myToolbar_Nivel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/icons" />

</androidx.constraintlayout.widget.ConstraintLayout>